<div class="col-sm-6 col-md-4 col-lg-3 d-flex">
  <div class="card mb-4" style="width: 18rem;">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title">
        <%= activity.name %>
      </h5>
      <p class="card-text">
        <%= activity.description %>
      </p>
      <p class="card-text">
        Dificultad: <span><%= activity.hardness %></span>    
      </p>
      <p><% activity.tags.each do |tag| %>
      <%= link_to tag.title, admin_tag_path(tag), class: 'badge badge-light' %>
  <% end %></p>
    </div>
  </div>
</div>
